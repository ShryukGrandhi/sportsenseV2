# ========================================
# SportSense V2 - Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# DATABASE (PostgreSQL)
# ========================================
# Use Neon, Supabase, or local Postgres
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/sportsense?sslmode=prefer"

# ========================================
# REDIS (Upstash)
# ========================================
# Get these from https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# ========================================
# AUTHENTICATION (NextAuth)
# ========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ========================================
# GOOGLE GEMINI AI
# ========================================
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# ========================================
# NBA DATA APIs
# ========================================
# Ball Don't Lie API (optional - has free tier without key)
# Get from https://www.balldontlie.io/ if you want higher limits
BALLDONTLIE_API_KEY=""

# ========================================
# WEB PUSH NOTIFICATIONS (Optional)
# ========================================
# Generate VAPID keys: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_EMAIL="mailto:your@email.com"

# ========================================
# VAPI VOICE CALLS
# ========================================
# Get from https://dashboard.vapi.ai/
VAPI_PRIVATE_KEY=""
VAPI_PUBLIC_KEY=""
VAPI_BASE_URL="https://api.vapi.ai"
VAPI_PHONE_NUMBER_ID=""
VAPI_TARGET_PHONE=""

# ========================================
# SMS NOTIFICATIONS (Email-to-SMS Gateway)
# ========================================
# Free method: Uses email-to-SMS carrier gateways
# Gmail setup: Settings > Security > App Passwords > create one
SMTP_USER=""
SMTP_PASS=""
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMS_GATEWAY_EMAIL=""
# Format: 1XXXXXXXXXX@carrier (T-Mobile: tmomail.net, AT&T: txt.att.net, Verizon: vtext.com)

# ========================================
# TWILIO SMS (Optional Fallback)
# ========================================
# Get from https://console.twilio.com/
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV="development"

# Enable detailed logging in development
DEBUG_LOGGING="true"





